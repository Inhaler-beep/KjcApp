<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffff"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F1F1"
        >



         <ImageView
             android:id="@+id/kjc_front_page_image"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:scaleType="centerCrop"
             android:layout_marginTop="0dp"

             android:src="@drawable/kjc_front_page"/>
         <TextView
             android:id="@+id/kristu_jayanti_textView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="180dp"
             android:text="Kristu Jayanti College,Autonomous"
             android:background="@drawable/inputs"
             android:backgroundTint="#2E6C8E"
             android:padding="12dp"
             android:textColor="#FFFFFF"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"/>


          <de.hdodenhof.circleimageview.CircleImageView
              android:id="@+id/kjc_logo_image"
              android:layout_width="65dp"
              android:layout_height="65dp"
              android:layout_below="@+id/kristu_jayanti_textView"
              android:src="@drawable/kjc_logo_small"

              android:layout_centerHorizontal="true"
              android:layout_marginTop="20dp"
              />

         <TextView
             android:id="@+id/card_view_heading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/kjc_logo_image"
             android:text="Students Corner"
             android:layout_marginTop="20dp"
             android:layout_centerHorizontal="true"
             android:textStyle="bold"/>
         <View
             android:id="@+id/view_above_card_layout"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_below="@id/card_view_heading"
             android:layout_marginTop="15dp"
             android:layout_marginLeft="25dp"
             android:layout_marginRight="25dp"
             android:background="#D9DCDB">

         </View>



        <LinearLayout
            android:id="@+id/cardview_top_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/view_above_card_layout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="#F0F1F1"
        android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="7dp">





        <androidx.cardview.widget.CardView
            android:id="@+id/bunk_manager_card"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            app:cardElevation="@dimen/cardview_default_elevation"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#E6A45E"

                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bunker_image_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"

                    android:src="@drawable/faculty_icon">
                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="Faculty">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1EEEE"
                    android:layout_margin="10dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact a faculty"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#63D6B2"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/timetable_image_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/timetable_icon">
                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Time Table">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1EEEE"
                    android:layout_margin="10dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check your time table and dont miss a class"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/cardview_below_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_top_linear"
        android:gravity="center"
        android:background="#F0F1F1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDD289"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/vere_etho_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/find_user">
                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Find A Jayantian">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1EEEE"
                    android:layout_margin="10dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter to search for a Jayantian"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#73D1DD"
                android:orientation="vertical"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/blueprint_image_button"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/blueprint_icon">
                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="Blue Print">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F1EEEE"
                    android:layout_margin="10dp">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your way in Kjc, Never get lost"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/cardview_below_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >


        </View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by BCA Department"
                android:layout_marginTop="40dp"
                android:layout_gravity="center">
            </TextView>
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>